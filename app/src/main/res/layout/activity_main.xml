<LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16sp"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150sp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="20sp">
            <Button android:onClick="Green"
                android:id="@+id/GreenBtn"
            android:layout_width="150sp"
            android:layout_height="match_parent"
            android:background="@drawable/shapegreen"
                android:layout_marginRight="20sp" />
            <Button android:onClick="Red"
                android:id="@+id/RednBtn"
                android:layout_width="150sp"
                android:layout_height="match_parent"
                android:background="@drawable/red"/>
        </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="0"
        android:textSize="30sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150sp"
            android:orientation="horizontal"
            android:gravity="center">
            <Button android:onClick="Yellow"
                android:id="@+id/YellowBtn"
                android:layout_width="150sp"
                android:layout_height="match_parent"
                android:background="@drawable/shapeyellow"
                android:layout_marginRight="20sp"/>
            <Button android:onClick="Blue"
                android:id="@+id/BlueBtn"
                android:layout_width="150sp"
                android:layout_height="match_parent"
                android:background="@drawable/shapeblue" />
        </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView android:onClick="Play"
                    android:clickable="true"
                    android:layout_width="90sp"
                    android:layout_height="90sp"
                    android:scaleType="fitXY"
                    android:src="@drawable/play"/>

                <ImageView android:onClick="Stop"
                    android:clickable="true"
                    android:layout_width="90sp"
                    android:layout_height="90sp"
                    android:scaleType="fitXY"
                    android:src="@drawable/stop"/>
            </LinearLayout>
    </LinearLayout>