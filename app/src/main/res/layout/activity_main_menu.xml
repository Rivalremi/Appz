<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.admin.myapplication.MainMenu"
    android:background="#20f5f8"
    android:orientation="vertical">

    <TextView android:id="@+id/Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="60sp"
        android:text="Simon"
        android:gravity="center"/>

    <LinearLayout
        android:paddingTop="150sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button android:onClick="PlayGame"
            android:layout_gravity="center"
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:text="Play"
            android:background="@drawable/shapegreen" />

        <Button android:onClick="About"
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:background="@drawable/shapeyellow"
            android:text="About"
            android:layout_marginLeft="50sp"/>


</LinearLayout>

</LinearLayout>